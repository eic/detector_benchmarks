pi0_zdc:simulate:
  stage: simulate
  extends: .phy_benchmark
  needs: ["common:detector"]
  parallel:
    matrix:
      - P: 60
      - P: 80
      - P: 100
      - P: 130
      - P: 160
  timeout: 1 hours
  script:
    - snakemake --cores 1 sim_output/pi0_zdc/epic_zdc_sipm_on_tile_only_rec_pi0_zdc_${P}GeV.edm4hep.root 
  retry:
    max: 2
    when:
      - runner_system_failure

pi0_zdc:analyze:
  stage: analyze
  extends: .phy_benchmark
  needs: ["pi0_zdc:simulate"]
  script:
    - mkdir -p results/epic_zdc_sipm_on_tile_only
    - python benchmarks/pi0_zdc/analysis/pi0_zdc_plots.py results/epic_zdc_sipm_on_tile_only/pi0_zdc

pi0_zdc:results:
  stage: collect
  needs: ["pi0_zdc:analyze"]
  script:
    - ls -al
